// Addition Program

package com.operatorsexamples;

public class Addition {

	public static void main(String[] args) {
	
		int a = 30;
		int b = 40;
		int addition;
		
		addition = a+b;
		System.out.println("Addition =" + addition);

		float fvalue = 25.4f;
		float fvalue1 = 35.33f;
		System.out.println("Addition =" + (fvalue + fvalue1));

		char ch = 'A';
		char ch1 = 'B';
		System.out.println("Addition=" + (ch * ch1));
		
		boolean c = true;
		boolean c1 = false;
	
}

}

// Operators Program 

package com.operatorsexamples;

public class Operators {
public static void main(String[] args) {
	
	int a = 1367332;
	int b = 545454;
	
	int addition =a+b;
	
	System.out.println("Adiition = " + addition);
	
	System.out.println("Substraction = " + (a-b));
	
	System.out.println("Multiplication = " + (a*b));
	
	System.out.println("division = " + (a/b));
	
	System.out.println("Moduls = " + (a%b));
	
}
}

// Prifix and Postfix Program
package com.operatorsexamples;

public class PrifixsAndPostfixsExample {
	
public static void main(String[] args) {
	
	 float f1 = 422.44f;
	 float f2 = 422.44f;
	 
	 System.out.println("Post increment =" + f1 ++);
	 
	 System.out.println("Pri increment=" + ++ f2);
	 
	 //Diffrence b/w post increment and pri increment
	 
     System.out.println("Post increment =" + f1 --);
	 
	 System.out.println("Pri increment=" + -- f2);
	 
	 int a = 5, i;
	 i = a++ + ++a + a++;
	 System.out.println("i value =" + i);
	 
	} 

}

// Array and ForLoop, Foe Each Program

package com.operatorsexamples;

public class ArrayAndForLoop {

	public static void main(String[] args) {
		
		float marks[] = {434.4f,3.2f,22.44f,44.34f,44.33f};
		
		System.out.println(marks[0]);
		
		System.out.println(marks[1]);
		
		System.out.println(marks[2]);
		
		System.out.println(marks[3]);
		
		System.out.println(marks[4]);
		
		System.out.println(" arry values using for loop ");
		
		for( int i=0;i<marks.length;i++) {
			
			System.out.println(marks[i]);
			
		}
		System.out.println(" array values using foreach ");
		for(float f :marks) {
			System.out.println(f);
		}
	}
}


// Shift Operator Programs

package com.operatorsexamples;

public class ShiftOperator {
	
public static void main(String[] args) {
	int a =5;
	
	System.out.println(" left shift of a = " +(a << 2));
	
	a=5;
	 
	System.out.println(" left shift of a = " +(a >> 2));
	
	a=5;

	System.out.println(" left shift of a = " +(a >>> 2));
	
	a=5;

    System.out.println(" left shift of a = " +(~a));

    a= -5;

    System.out.println(" left shift of a = " +(~a));

}
}


// Scanner Program 

package com.operatorsexamples;

import java.util.Scanner;

public class ScannerExample {

	public static void main(String[] args) {
		
		Scanner src = new Scanner(System.in);
		
		System.out.println(" To read integer value we have nextInt() method");
		int a = src.nextInt();
		System.out.println(" Enter value of integer =" + a);
		
		System.out.println(" To read integer value we have nextFloat() method");
		float b = src.nextFloat();
		System.out.println(" Enter value of float =" + b);
		
		System.out.println(" To read integer value we have nextDouble() method");
		double c = src.nextDouble();
		System.out.println(" Enter value of double =" + c);
		
		System.out.println(" To read integer value we have nextLong() method");
		long d = src.nextLong();
		System.out.println(" Enter value of long =" + d);
		
		System.out.println(" To read integer value we have charAt() method");
		char ch = src.next().charAt(0);
		System.out.println(" Enter value of char =" + ch);
		
	} 
}

// Even and Odd Program

package com.decisionstatement;
import java.util.Scanner;
public class EvenAndOdd {
	public static void main(String[] args) {
		
		int[] a = new int[5];
		Scanner src = new Scanner(System.in);
		
		System.out.println(" enter intger value in to the  array");
		
		for(int i= 0; i< a.length; i++ ) {
		a[i] = src.nextInt();
		}
		System.out.println("Even");
		for(int i= 0; i< a.length; i++ ) {
			if((a[i] % 2 == 0)) {
				System.out.println( a[i] + " , ");
			}else {
				System.out.println(" $ " + " , ");

			}
			}
	}

}





